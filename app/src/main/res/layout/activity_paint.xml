<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lunaticlemon.lifecast.paint.PaintActivity">

    <LinearLayout
        android:id="@+id/toolsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="#ffffffff"
        >
        <Button
            android:id="@+id/colorBtn"
            android:drawableTop="@drawable/colorpalette"
            android:drawablePadding="2dp"
            android:text="Color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/penBtn"
            android:drawableTop="@drawable/penpalette"
            android:drawablePadding="2dp"
            android:text=" Pen "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/eraserBtn"
            android:drawableTop="@drawable/eraser"
            android:drawablePadding="2dp"
            android:text="Eraser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/undoBtn"
            android:drawableTop="@drawable/undo"
            android:drawablePadding="2dp"
            android:text=" Undo "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/boardLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_load"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="right"
            android:text="결과 : "
            android:textColor="#000000"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/recognizeBtn"
            android:drawableTop="@drawable/ok_btn"
            android:drawablePadding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="글자 인식" />

        <Button
            android:id="@+id/albumBtn"
            android:drawableTop="@drawable/ok_btn"
            android:drawablePadding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="앨범" />
    </LinearLayout>

</LinearLayout>

